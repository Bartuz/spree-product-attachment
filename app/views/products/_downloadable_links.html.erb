<%= image_tag 'attachment_extension/download_x37.png', :class => 'header' %><span class='tag'>Скачать:</span>
<br /><br />

<% if @product.downloadables.blank? -%>
  <strong><%= t 'download_not_available' %></strong>
<% else -%>
  <ul>
    <% @product.downloadables.each do |downloadable| %>
      <li>
	<% extension_name = File.extname(downloadable.attachment_file_name) -%>
	<% extension_name.slice!(0) -%>
	<% extension_name.downcase! -%>
	<%= link_to(image_tag("attachment_extension/icons/#{extension_name}.gif"), downloadable.attachment.url(:product)) %>
	<%= downloadable.description %>(<%= number_to_human_size(downloadable.attachment_file_size) %>)
      </li>
    <% end -%>
  </ul>
<% end -%>
